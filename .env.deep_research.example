# Deep Research Integration Environment Configuration
# Copy this file to .env and configure your settings

# === Core API Keys (Required) ===
OPENAI_API_KEY=your_openai_api_key_here
ANTHROPIC_API_KEY=your_anthropic_api_key_here
TAVILY_API_KEY=your_tavily_api_key_here

# === Deep Research Configuration ===
# Enable/disable deep research functionality
ENABLE_DEEP_RESEARCH=true

# Model Configuration
# Format: provider:model_name
DR_SUMMARIZATION_MODEL=openai:gpt-4.1-mini
DR_RESEARCH_MODEL=openai:gpt-4.1
DR_COMPRESSION_MODEL=openai:gpt-4.1-mini
DR_FINAL_REPORT_MODEL=openai:gpt-4.1

# Research Workflow Configuration
DR_MAX_ITERATIONS=4                  # Max research supervisor iterations
DR_MAX_CONCURRENT=3                  # Max parallel research units
DR_MAX_TOOL_CALLS=10                 # Max tool calls per researcher
DR_ALLOW_CLARIFICATION=false         # Allow clarifying questions to user

# Search API Configuration
# Options: tavily, openai, anthropic, none
DR_SEARCH_API=tavily

# Model Parameters
DR_MAX_TOKENS=8192                   # Max output tokens
DR_TEMPERATURE=0.1                   # Response creativity (0.0-1.0)

# === Alternative Model Configurations ===

# For Local/Ollama Models (cost-free but requires local setup)
# DR_RESEARCH_MODEL=ollama:llama3.1:8b
# DR_FINAL_REPORT_MODEL=ollama:llama3.1:8b
